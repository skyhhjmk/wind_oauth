{% extends "layout/base.html.twig" %}

{% block body %}
<div class="min-h-screen flex">
    <!-- 侧边栏 -->
    <aside class="w-64 bg-gray-800 text-white">
        <div class="p-6">
            <h1 class="text-2xl font-bold">Wind OAuth</h1>
            <p class="text-gray-400 text-sm mt-1">管理后台</p>
        </div>
        <nav class="mt-6">
            <a href="/admin" class="block px-6 py-3 hover:bg-gray-700 transition">
                <svg class="inline-block w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                仪表盘
            </a>
            <a href="/admin/clients" class="block px-6 py-3 hover:bg-gray-700 transition">
                <svg class="inline-block w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                客户端管理
            </a>
            <a href="/admin/users" class="block px-6 py-3 hover:bg-gray-700 transition">
                <svg class="inline-block w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                用户管理
            </a>
            <a href="/admin/tokens" class="block px-6 py-3 hover:bg-gray-700 transition">
                <svg class="inline-block w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
                令牌管理
            </a>
            <a href="/admin/scopes" class="block px-6 py-3 hover:bg-gray-700 transition">
                <svg class="inline-block w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                权限范围
            </a>
            <a href="/admin/providers" class="block px-6 py-3 hover:bg-gray-700 transition">
                <svg class="inline-block w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                OAuth提供商
            </a>
        </nav>
        <div class="absolute bottom-0 w-64 p-6 border-t border-gray-700">
            <a href="/logout" class="block text-center py-2 bg-gray-700 rounded hover:bg-gray-600 transition">
                退出登录
            </a>
        </div>
    </aside>

    <!-- 主内容区 -->
    <main class="flex-1 overflow-y-auto">
        <!-- 顶部栏 -->
        <header class="bg-white shadow-sm">
            <div class="px-8 py-4 flex justify-between items-center">
                <h2 class="text-2xl font-semibold text-gray-800">{% block page_title %}{% endblock %}</h2>
                <div class="text-sm text-gray-600">
                    欢迎, <span class="font-semibold">{{ username|default('Admin') }}</span>
                </div>
            </div>
        </header>

        <!-- 页面内容 -->
        <div class="p-8">
            {% block content %}{% endblock %}
        </div>
    </main>
</div>
{% endblock %}
