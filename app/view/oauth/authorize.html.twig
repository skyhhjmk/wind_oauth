{% extends "layout/base.html.twig" %}

{% block title %}授权确认 - Wind OAuth{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4">
    <div class="max-w-lg w-full">
        <div class="bg-white shadow-2xl rounded-lg overflow-hidden">
            <!-- 头部 -->
            <div class="bg-indigo-600 px-6 py-8 text-white">
                <div class="flex items-center justify-center mb-4">
                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-center">授权确认</h2>
                <p class="text-center text-indigo-100 mt-2">
                    <strong>{{ client.name }}</strong> 请求访问您的账户
                </p>
            </div>

            <!-- 内容 -->
            <div class="px-6 py-6">
                <!-- 用户信息 -->
                <div class="mb-6 p-4 bg-gray-50 rounded-lg">
                    <p class="text-sm text-gray-600 mb-1">当前登录账户</p>
                    <p class="font-semibold text-gray-900">{{ user.username }} ({{ user.email }})</p>
                </div>

                <!-- 权限请求 -->
                <div class="mb-6">
                    <h3 class="font-semibold text-gray-900 mb-3">应用将获得以下权限：</h3>
                    {% if scopes|length > 0 %}
                        <ul class="space-y-2">
                            {% for scope in scopes %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                <div>
                                    <p class="font-medium text-gray-900">{{ scope.description }}</p>
                                </div>
                            </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-sm text-gray-600">基本信息访问权限</p>
                    {% endif %}
                </div>

                <!-- 警告 -->
                <div class="mb-6 p-4 bg-yellow-50 border-l-4 border-yellow-400 rounded">
                    <div class="flex">
                        <svg class="w-5 h-5 text-yellow-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        <p class="text-sm text-yellow-700">
                            请确保您信任此应用后再授权。授权后，应用将能够访问您的账户信息。
                        </p>
                    </div>
                </div>

                <!-- 按钮 -->
                <form id="authorizeForm" method="POST" action="/oauth/authorize">
                    <input type="hidden" name="client_id" value="{{ client.client_id }}">
                    <input type="hidden" name="redirect_uri" value="{{ redirect_uri }}">
                    <input type="hidden" name="state" value="{{ state }}">
                    {% for scope in scopes %}
                    <input type="hidden" name="scope[]" value="{{ scope.scope }}">
                    {% endfor %}
                    
                    <div class="flex gap-4">
                        <button type="submit" name="approved" value="no" 
                                class="flex-1 py-3 px-4 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 font-medium transition">
                            拒绝
                        </button>
                        <button type="submit" name="approved" value="yes"
                                class="flex-1 py-3 px-4 border border-transparent rounded-md text-white bg-indigo-600 hover:bg-indigo-700 font-medium transition">
                            授权
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
