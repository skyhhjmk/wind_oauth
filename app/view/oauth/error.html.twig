{% extends "layout/base.html.twig" %}

{% block title %}错误 - Wind OAuth{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-red-50 to-pink-100 py-12 px-4">
    <div class="max-w-md w-full">
        <div class="bg-white shadow-2xl rounded-lg overflow-hidden">
            <!-- 头部 -->
            <div class="bg-red-600 px-6 py-8 text-white">
                <div class="flex items-center justify-center mb-4">
                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-center">授权错误</h2>
            </div>

            <!-- 内容 -->
            <div class="px-6 py-8">
                <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded">
                    <p class="text-red-800 font-medium">{{ error }}</p>
                </div>

                <div class="text-center">
                    <a href="/" class="inline-block py-2 px-6 border border-transparent rounded-md text-white bg-indigo-600 hover:bg-indigo-700 font-medium transition">
                        返回首页
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
