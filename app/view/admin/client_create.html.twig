{% extends "layout/admin.html.twig" %}

{% block page_title %}创建 OAuth 客户端{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow">
    <!-- 头部 -->
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">创建新客户端</h3>
    </div>

    <!-- 表单 -->
    <form id="createClientForm" class="p-6 space-y-6">
        <!-- 客户端名称 -->
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">客户端名称</label>
            <input type="text" id="name" name="name" required
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                   placeholder="例如：我的应用">
        </div>

        <!-- 重定向 URI -->
        <div>
            <label for="redirect_uri" class="block text-sm font-medium text-gray-700 mb-2">重定向 URI</label>
            <input type="url" id="redirect_uri" name="redirect_uri" required
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                   placeholder="https://example.com/callback">
            <p class="mt-1 text-sm text-gray-500">授权成功后的回调地址（精确匹配）。如需动态回调，请启用下方选项并配置白名单。</p>
        </div>

        <!-- 动态回调与白名单 -->
        <div class="space-y-2">
            <label class="inline-flex items-center">
                <input type="checkbox" name="redirect_dynamic_enabled"
                       class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                <span class="ml-2 text-sm text-gray-700">启用动态回调 URL（按域名/IP+端口白名单校验）</span>
            </label>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">域名/IP 白名单（host:port，每行一个）</label>
                <textarea name="redirect_whitelist" rows="4"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                          placeholder="example.com:443&#10;127.0.0.1:3000"></textarea>
                <p class="mt-1 text-xs text-gray-500">仅允许在白名单中的 host:port 回调，路径任意。仅支持 http/https。</p>
            </div>
        </div>

        <!-- 授权类型 -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">授权类型</label>
            <div class="space-y-2">
                <label class="inline-flex items-center mr-4">
                    <input type="checkbox" name="grant_types[]" value="authorization_code" checked
                           class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                    <span class="ml-2 text-sm text-gray-700">Authorization Code</span>
                </label>
                <label class="inline-flex items-center mr-4">
                    <input type="checkbox" name="grant_types[]" value="refresh_token"
                           class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                    <span class="ml-2 text-sm text-gray-700">Refresh Token</span>
                </label>
                <label class="inline-flex items-center mr-4">
                    <input type="checkbox" name="grant_types[]" value="client_credentials"
                           class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                    <span class="ml-2 text-sm text-gray-700">Client Credentials</span>
                </label>
            </div>
        </div>

        <!-- 权限范围 -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">权限范围</label>
            <div class="space-y-2">
                {% for scope in scopes %}
                <label class="flex items-start">
                    <input type="checkbox" name="scope[]" value="{{ scope.scope }}"
                           class="mt-1 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                    <div class="ml-2">
                        <span class="text-sm text-gray-700 font-medium">{{ scope.scope }}</span>
                        <p class="text-xs text-gray-500">{{ scope.description }}</p>
                    </div>
                </label>
                {% endfor %}
            </div>
        </div>

        <!-- 按钮 -->
        <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
            <a href="/admin/clients" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">
                取消
            </a>
            <button type="submit" data-loading-text="创建中..." class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition">
                创建客户端
            </button>
        </div>
    </form>
</div>

<!-- 成功模态框 -->
<div id="successModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">客户端创建成功</h3>
        <p class="text-sm text-gray-600 mb-4">请妥善保存以下凭据，客户端密钥只会显示一次：</p>
        
        <div class="space-y-3 mb-6">
            <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Client ID</label>
                <div class="flex items-center bg-gray-50 px-3 py-2 rounded border border-gray-200">
                    <code id="clientId" class="text-sm flex-1 break-all"></code>
                    <button onclick="copyToClipboard('clientId')" class="ml-2 text-indigo-600 hover:text-indigo-700">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Client Secret</label>
                <div class="flex items-center bg-gray-50 px-3 py-2 rounded border border-gray-200">
                    <code id="clientSecret" class="text-sm flex-1 break-all"></code>
                    <button onclick="copyToClipboard('clientSecret')" class="ml-2 text-indigo-600 hover:text-indigo-700">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        
        <div class="flex justify-end">
            <a href="/admin/clients" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition">
                返回列表
            </a>
        </div>
    </div>
</div>

<script>
document.getElementById('createClientForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitBtn = e.target.querySelector('button[type="submit"]');
    const formData = new FormData(e.target);
    const data = {};

    for (const [key, value] of formData.entries()) {
        if (key.endsWith('[]')) {
            const cleanKey = key.slice(0, -2);
            if (!data[cleanKey]) data[cleanKey] = [];
            data[cleanKey].push(value);
        } else {
            data[key] = value;
        }
    }

    await withButtonLoading(submitBtn, async () => {
        try {
            const response = await fetch('/admin/clients', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            const result = await response.json();
            if (result.success) {
                document.getElementById('clientId').textContent = result.credentials.client_id;
                document.getElementById('clientSecret').textContent = result.credentials.client_secret;
                document.getElementById('successModal').classList.remove('hidden');
            } else {
                showToast(result.error || '创建失败', 'error');
            }
        } catch (error) {
            showToast('创建失败，请重试', 'error');
        }
    }, submitBtn?.dataset.loadingText || '处理中...');
});

function copyToClipboard(elementId) {
    const text = document.getElementById(elementId).textContent;
    navigator.clipboard.writeText(text).then(() => {
        showToast('已复制到剪贴板');
    });
}
</script>
{% endblock %}
